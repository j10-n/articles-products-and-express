<h1 id="editHead">Edit Article</h1>
<form action="/articles/edit" method="POST">
    <div>
        <h3>Editing:{{title}}</h3>
    </div>
    <div>
        <label for="title">Title</label>
        <input type="name" name="title" id="title">
    </div>
    <div>
        <label for="author">Author</label>
        <input type="text" name="author" id="author">
    </div>
    <div>
        <label for="body">Body</label>
        <input type="text" name="body" id="body">
    </div>
    <div>
        <button>Finished Editing</button>
    </div>
</form>
<form action="/articles" method="GET">
    <div>
        <button>Go Back to Articles</button>
    </div>
</form>
<form action="/articles/{{title}}/delete" method="GET">
    <div>
        <button type="submit">Delete Product</button>
    </div>
</form>